<div class="container w-50 border-3 shadow p-3 my-5 bg-white rounded">
    <h1 class="text-center text-capitalize">add article</h1>
    <form action="/user/addArticle" method="post" class="my-5 text-capitalize">
        <div class="mb-5">
            <label for="title" class="form-label">title</label>
            <input type="text" class="form-control" id="title" name="title" required>
        </div>
        <div class="mb-5">
            <label for="article" class="form-label">article</label>
            <textarea type="text" class="form-control" id="article" name="details" rows="6" required></textarea>
        </div>
        <button type="submit" class="btn btn-success">Add</button>
        <a href="/home" class="btn btn-danger">Cancel</a>
    </form>
</div>